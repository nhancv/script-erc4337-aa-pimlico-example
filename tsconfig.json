{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "noImplicitAny": false,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest"],
    "lib": ["es2015", "es2017", "dom"],
    "useUnknownInCatchVariables": false
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
